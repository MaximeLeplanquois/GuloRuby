<%= form_with model: @receipt_detail do |form|%>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @receipt_detail.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, min: 0, step: 0.01 %>
    <% @receipt_detail.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity, min: 1, step: 1 %>
    <% @receipt_detail.errors.full_messages_for(:quantity).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
<% end %>