<h1>New Account</h1>

<%= form_with model: @account do |form|%>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @account.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<p><%= link_to "Home", root_path %></p>